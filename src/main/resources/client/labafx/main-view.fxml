<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="mainPane" minHeight="560.0" minWidth="600.0" prefHeight="560.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.labafx.MainController">
   <center>
      <TabPane fx:id="tableTabPane" prefHeight="200.0" prefWidth="200.0" tabClosingPolicy="ALL_TABS" />
   </center>
   <left>
      <StackPane fx:id="leftStackPane" alignment="TOP_CENTER" maxWidth="200.0" minWidth="200.0" prefHeight="150.0" prefWidth="200.0" BorderPane.alignment="TOP_LEFT">
         <children>
            <VBox fx:id="buttonsVBox" alignment="TOP_CENTER" maxWidth="200.0" prefHeight="471.0" prefWidth="200.0" spacing="5.0" style="-fx-background-color: E3E3E3;">
               <children>
                  <HBox alignment="CENTER_LEFT" prefHeight="36.0" prefWidth="192.0" spacing="20.0">
                     <children>
                        <ImageView fx:id="colorImage" fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true" />
                        <Label fx:id="nameLabel" text="Label" />
                     </children>
                  </HBox>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
         </children>
      </StackPane>
   </left>
   <bottom>
      <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <VBox prefHeight="200.0" prefWidth="199.0">
               <children>
                  <Label text="Тип коллекции" />
                  <Label text="Дата инициализации" />
                  <Label text="Количество элементов" />
               </children>
            </VBox>
            <Canvas height="200.0" width="200.0" HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
   </bottom>
</BorderPane>
